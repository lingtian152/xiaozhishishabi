RewriteEngine On

ErrorDocument 404 /404
ErrorDocument 500 /500
ErrorDocument 408 /408
ErrorDocument 403 /403

RedirectMatch 403 /\..*$

<Files ~ "\js\|\css\">  
    Order Allow,Deny
    Deny from All
</Files>


Options +MultiViews
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]
RewriteRule ^([^\.]+)$ $1.php [NC,L]